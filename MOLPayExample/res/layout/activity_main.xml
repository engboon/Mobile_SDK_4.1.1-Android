<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bag" />
        
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Fancy Bag"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="MYR 1.10"
            android:textSize="15sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#7D26CD"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="Pay"
            android:textColor="#ffffff" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:padding="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:text="Transaction Status"
            android:textStyle="bold" />
        
          <TextView
              android:id="@+id/name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="false"
              android:layout_below="@id/title"
              android:layout_centerInParent="false"
              android:layout_centerVertical="false"
              android:layout_marginTop="10dp"
              android:text="Name"
              android:textStyle="bold" />
          
             <TextView
                 android:id="@+id/nameTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="false"
                 android:layout_below="@id/title"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="false"
                 android:layout_marginTop="10dp"
                 android:textColor="#00abff"
           />
             
              <TextView
                  android:id="@+id/mobile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="false"
                  android:layout_below="@id/name"
                  android:layout_centerInParent="false"
                  android:layout_centerVertical="false"
                  android:layout_marginTop="10dp"
                  android:text="Mobile"
                  android:textStyle="bold" />
          
             <TextView
                 android:id="@+id/mobileTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="false"
                 android:layout_below="@id/name"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="false"
                 android:layout_marginTop="10dp"
                 android:text=""
                 android:textColor="#00abff"
           />
             
              <TextView
                  android:id="@+id/email"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="false"
                  android:layout_below="@id/mobile"
                  android:layout_centerInParent="false"
                  android:layout_centerVertical="false"
                  android:layout_marginTop="10dp"
                  android:text="Email"
                  android:textStyle="bold" />
          
             <TextView
                 android:id="@+id/emailTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="false"
                 android:layout_below="@id/mobile"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="false"
                 android:layout_marginTop="10dp"
                 android:text=""
                 android:textColor="#00abff" />
             
              <TextView
                  android:id="@+id/desc"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="false"
                  android:layout_below="@id/email"
                  android:layout_centerInParent="false"
                  android:layout_centerVertical="false"
                  android:layout_marginTop="10dp"
                  android:text="Description"
                  android:textStyle="bold" />
          
             <TextView
                 android:id="@+id/descTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="false"
                 android:layout_below="@id/email"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="false"
                 android:layout_marginTop="10dp"
                 android:text=""
                  android:textColor="#00abff" />
             
               <TextView
                  android:id="@+id/amt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="false"
                  android:layout_below="@id/desc"
                  android:layout_centerInParent="false"
                  android:layout_centerVertical="false"
                  android:layout_marginTop="10dp"
                  android:text="Amount"
                  android:textStyle="bold" />
          
             <TextView
                 android:id="@+id/amtTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="false"
                 android:layout_below="@id/desc"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="false"
                 android:layout_marginTop="10dp"
                 android:text=""
                   android:textColor="#00abff" />
              <TextView
                  android:id="@+id/trans"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="false"
                  android:layout_below="@id/amt"
                  android:layout_centerInParent="false"
                  android:layout_centerVertical="false"
                  android:layout_marginTop="10dp"
                  android:text="Transaction ID"
                  android:textStyle="bold" />
          
             <TextView
                 android:id="@+id/transTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="false"
                 android:layout_below="@id/amt"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="false"
                 android:layout_marginTop="10dp"
                 android:text=""
                   android:textColor="#00abff" />
             
              <TextView
                  android:id="@+id/stat"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="false"
                  android:layout_below="@id/trans"
                  android:layout_centerInParent="false"
                  android:layout_centerVertical="false"
                  android:layout_marginTop="10dp"
                  android:text="Status"
                  android:textStyle="bold" />
          
             <TextView
                 android:id="@+id/statTxt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="false"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="false"
                 android:layout_below="@id/trans"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="false"
                 android:layout_marginTop="10dp"
                 android:text=""
                    android:textColor="#00abff" />
             
             

    </RelativeLayout>

</RelativeLayout>
